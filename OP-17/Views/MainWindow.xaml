<Window x:Class="OP_17.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Расчет расхода продуктов на выпущенные изделия"
        MaxWidth="1100" MinWidth="1000"
        d:DesignHeight="507.531" d:DesignWidth="986.538">
    
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
        </Style>
    </Window.Resources>
    <Grid  Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--Header-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <GroupBox Header="Документ">
                <StackPanel Grid.IsSharedSizeScope="True">
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="DocLabel"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Content="Номер" VerticalAlignment="Center" />

                        <TextBox Grid.Row="0" Grid.Column="1" Width="100" HorizontalAlignment="Left" />
                    </Grid>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="DocLabel"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Grid.Column="0" Content="Дата создания" VerticalAlignment="Center"/>

                        <DatePicker Grid.Row="0" Grid.Column="1" Width="150" HorizontalAlignment="Left"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Grid.Column="0" Grid.ColumnSpan="2" Content="Отчетный период" VerticalAlignment="Center"/>
                        <Label Grid.Row="1" Grid.Column="0" Content="от" VerticalAlignment="Center"/>
                        <Label Grid.Row="1" Grid.Column="2" Content="до" VerticalAlignment="Center"/>

                        <DatePicker Grid.Row="1" Grid.Column="1" Width="150" HorizontalAlignment="Left"/>
                        <DatePicker Grid.Row="1" Grid.Column="3" Width="150" HorizontalAlignment="Left"/>

                    </Grid>
                </StackPanel>
            </GroupBox>
            <GroupBox Grid.Column="1"  Header="Организация">
                <StackPanel  Grid.IsSharedSizeScope="True">
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="DocLabel"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="Наименование" VerticalAlignment="Center"/>
                        <Label Grid.Column="2" Content="по ОКПО " VerticalAlignment="Center"/>

                        <TextBox Grid.Column="1" />
                        <TextBox Grid.Column="3" Width="100" HorizontalAlignment="Left"/>

                    </Grid>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="DocLabel"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="Структурное подразделение" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1"/>
                    </Grid>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="DocLabel"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="Вид деятельности по ОКДП" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Width="100" HorizontalAlignment="Left"/>
                    </Grid>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" SharedSizeGroup="DocLabel"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="Вид операции" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Width="100" HorizontalAlignment="Left"/>
                    </Grid>
                </StackPanel>
            </GroupBox>
        </Grid>

        <TabControl Grid.Row="1" Margin="0,5">
            <TabItem Header="Продукты">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <DataGrid Grid.Row="1" HeadersVisibility="Column"
                              CanUserAddRows="True"
                              CanUserDeleteRows="True"
                              ItemsSource="{Binding Path=Products}"
                              AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" Width="*" Binding="{Binding Path=Name}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Изделия">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <Button Padding="20, 0" Margin="0,5" Content="Создать" Click="CreateDishOnClick"/>
                    </StackPanel>
                    <DataGrid Grid.Row="1" 
                              x:Name="DishesDataGrid"
                              HeadersVisibility="Column" 
                              ItemsSource="{Binding Path=Dishes}"
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              MouseDoubleClick="DataGridOnMouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" Width="*" Binding="{Binding Path=Name}"/>
                            <DataGridTextColumn Header="Стоимость" Width="*" Binding="{Binding Path=Price}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" FlowDirection="RightToLeft" Orientation="Horizontal" Margin="0,5">
        <Button Content="Сформировать отчет"/>
        <Button Content="Подписать" Margin="15,0"/>
        </StackPanel>
    </Grid>
</Window>
